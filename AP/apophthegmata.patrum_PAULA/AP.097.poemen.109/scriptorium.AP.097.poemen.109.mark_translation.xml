<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.097.poemen.109.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.097.poemen.109.mark.xml">
		<feat xlink:href="#sSpan5" value="…very much in a hurry"/>
		<feat xlink:href="#sSpan28" value="and I am eager to see the king."/>
		<feat xlink:href="#sSpan59" value="Take me there."/>
		<feat xlink:href="#sSpan69" value="He said to him,"/>
		<feat xlink:href="#sSpan85" value="“I will come with you for half the way.”"/>
		<feat xlink:href="#sSpan126" value="And he said to another friend,"/>
		<feat xlink:href="#sSpan149" value="“Take me to the king.”"/>
		<feat xlink:href="#sSpan170" value="He said to him,"/>
		<feat xlink:href="#sSpan190" value="“I will come with you to the palace.”"/>
		<feat xlink:href="#sSpan222" value="He said to another friend,"/>
		<feat xlink:href="#sSpan242" value="“Take me to the king.”"/>
		<feat xlink:href="#sSpan263" value="He said to him,"/>
		<feat xlink:href="#sSpan284" value="“I will take you to the king boldly,"/>
		<feat xlink:href="#sSpan326" value="and I will speak concerning you.”"/>
		<feat xlink:href="#sSpan351" value="They said to him,"/>
		<feat xlink:href="#sSpan373" value="“Explain this parable to us.”"/>
		<feat xlink:href="#sSpan400" value="And he said,"/>
		<feat xlink:href="#sSpan415" value="“The first is ascesis, which takes the road up to half of the way."/>
		<feat xlink:href="#sSpan471" value="The second is sobriety, that which reaches up to heaven."/>
		<feat xlink:href="#sSpan525" value="The third is charity, that which takes them up to God boldly.”"/></featList></paula>