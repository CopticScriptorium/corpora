<paula version="1.1">
	<header paula_id="scriptorium.AP.116.pistus.01.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.116.pistus.01.mark.xml">
		<feat xlink:href="#sSpan6" value="Apa Sisoes said these things."/>
		<feat xlink:href="#sSpan45" value="One of us entreated him, saying, 'Please, say one word to us yourself.'"/>
		<feat xlink:href="#sSpan118" value="He said, 'Mindful lack of consideration for yourself."/>
		<feat xlink:href="#sSpan154" value="It will fulfill all the Scriptures.'"/>
		<feat xlink:href="#sSpan192" value="And another of us said to him, "/>
		<feat xlink:href="#sSpan226" value="'What is it to be a stranger, my father?'"/>
		<feat xlink:href="#sSpan258" value="He said, 'It is being silent and saying everywhere you go,"/>
		<feat xlink:href="#sSpan325" value="I have nothing.'"/>
		<feat xlink:href="#sSpan341" value="This is being a stranger.'"/></featList></paula>