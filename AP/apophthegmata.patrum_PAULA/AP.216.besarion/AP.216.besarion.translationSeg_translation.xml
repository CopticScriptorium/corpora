<header paula_id="AP.216.besarion_translation"/>

<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="AP.216.besarion.translationSeg.xml">
<feat xlink:href="#translation_1" value="He said, that is Abba Doulos, the disciple of Abba Besarion:"/><!-- Ⲁ -->
<feat xlink:href="#translation_17" value="“while we were walking beside the sea,"/><!-- ⲉ̇ -->
<feat xlink:href="#translation_24" value="and I became thirsty."/><!-- ⲁⲩⲱ̇ -->
<feat xlink:href="#translation_29" value="I said to Abba Besarion: "/><!-- ⲁ -->
<feat xlink:href="#translation_37" value="“My father, I am very thirsty.”"/><!-- ⲡⲁ -->
<feat xlink:href="#translation_44" value="But the old man prayed"/><!-- ⲡ̇ -->
<feat xlink:href="#translation_50" value="he said to me:"/><!-- ⲡⲉϫⲁ -->
<feat xlink:href="#translation_55" value="“Drink at the sea and the water is sweet.”"/><!-- ⲥⲱ̇ -->
<feat xlink:href="#translation_68" value="And I drank."/><!-- ⲁ̇ⲛⲟⲕ -->
<feat xlink:href="#translation_75" value="And I put a little water into my vessel which was in my hand, saying:"/><!-- Ⲁⲩⲱ̇ -->
<feat xlink:href="#translation_98" value="“Lest I get thirsty again.”"/><!-- ⲙⲏⲡⲟⲧⲉ̇ -->
<feat xlink:href="#translation_103" value="But the old man after seeing (this) said to me:"/><!-- ⲡ̇ -->
<feat xlink:href="#translation_114" value="“Why did you fill water?”"/><!-- ⲉ̇ⲧⲃⲉ -->
<feat xlink:href="#translation_121" value="I said:"/><!-- ⲡⲉϫⲁ -->
<feat xlink:href="#translation_124" value="“Forgive me, lest I become thirsty there.”"/><!-- ⲕⲱ -->
<feat xlink:href="#translation_138" value="The old man said to me:"/><!-- Ⲡⲉϫⲉ -->
<feat xlink:href="#translation_144" value="“God is in this place, he is also, God, there.”"/><!-- ⲡ̇ -->
</featList>
</paula>
