<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.216.bessarion.01.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.216.bessarion.01.mark.xml">
		<feat xlink:href="#sSpan6" value="He said, that is Abba Doulos, the disciple of Abba Besarion:"/>
		<feat xlink:href="#sSpan63" value="“while we were walking beside the sea,"/>
		<feat xlink:href="#sSpan85" value="and I became thirsty."/>
		<feat xlink:href="#sSpan103" value="I said to Abba Besarion: "/>
		<feat xlink:href="#sSpan129" value="“My father, I am very thirsty.”"/>
		<feat xlink:href="#sSpan155" value="But the old man prayed"/>
		<feat xlink:href="#sSpan176" value="he said to me:"/>
		<feat xlink:href="#sSpan190" value="“Drink at the sea and the water is sweet.”"/>
		<feat xlink:href="#sSpan238" value="And I drank."/>
		<feat xlink:href="#sSpan262" value="And I put a little water into my vessel which was in my hand, saying:"/>
		<feat xlink:href="#sSpan330" value="“Lest I get thirsty again.”"/>
		<feat xlink:href="#sSpan354" value="But the old man after seeing (this) said to me:"/>
		<feat xlink:href="#sSpan388" value="“Why did you fill water?”"/>
		<feat xlink:href="#sSpan414" value="I said:"/>
		<feat xlink:href="#sSpan423" value="“Forgive me, lest I become thirsty there.”"/>
		<feat xlink:href="#sSpan473" value="The old man said to me:"/>
		<feat xlink:href="#sSpan492" value="“God here (of this place) is also God there.”"/></featList></paula>