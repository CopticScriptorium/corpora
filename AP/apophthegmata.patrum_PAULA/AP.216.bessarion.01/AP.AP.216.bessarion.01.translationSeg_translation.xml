<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="AP.AP.216.bessarion.01.translationSeg.xml">
<feat xlink:href="#translation_1" value="He said, that is Abba Doulos, the disciple of Abba Besarion:"/><!-- Ⲁ...· -->
<feat xlink:href="#translation_16" value="“while we were walking beside the sea,"/><!-- ϫⲉ...ⲁⲗⲁⲥⲥⲁ -->
<feat xlink:href="#translation_24" value="and I became thirsty."/><!-- ⲁⲩⲱ̇...· -->
<feat xlink:href="#translation_29" value="I said to Abba Besarion: "/><!-- ⲁ...ⲃⲏⲥⲁⲣⲓ̈ⲟⲛ -->
<feat xlink:href="#translation_36" value="“My father, I am very thirsty.”"/><!-- ϫⲉ.... -->
<feat xlink:href="#translation_44" value="But the old man prayed"/><!-- ⲡ̇...ϣ̇ⲗⲏⲗ -->
<feat xlink:href="#translation_50" value="he said to me:"/><!-- ⲡⲉϫⲁ...ⲓ̇ -->
<feat xlink:href="#translation_54" value="“Drink at the sea and the water is sweet.”"/><!-- ϫⲉ.... -->
<feat xlink:href="#translation_68" value="And I drank."/><!-- ⲁ̇ⲛⲟⲕ...ⲻ -->
<feat xlink:href="#translation_75" value="And I put a little water into my vessel which was in my hand, saying:"/><!-- Ⲁⲩⲱ̇...ⲥ -->
<feat xlink:href="#translation_97" value="“Lest I get thirsty again.”"/><!-- ϫⲉ.... -->
<feat xlink:href="#translation_103" value="But the old man after seeing (this) said to me:"/><!-- ⲡ̇...ⲓ̇ -->
<feat xlink:href="#translation_113" value="“Why did you fill water?”"/><!-- ϫⲉ.... -->
<feat xlink:href="#translation_121" value="I said:"/><!-- ⲡⲉϫⲁ...ⲓ̇ -->
<feat xlink:href="#translation_123" value="“Forgive me, lest I become thirsty there.”"/><!-- ϫⲉ...ⲻ -->
<feat xlink:href="#translation_138" value="The old man said to me:"/><!-- Ⲡⲉϫⲉ...ⲓ̇ -->
<feat xlink:href="#translation_143" value="“God is in this place, he is also, God, there.”"/><!-- ϫⲉ.... -->
