<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.095.n282.charity.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.095.n282.charity.mark.xml">
		<feat xlink:href="#sSpan6" value="An elder said,"/>
		<feat xlink:href="#sSpan32" value="“There was a certain person who did many good things,"/>
		<feat xlink:href="#sSpan71" value="and the evil one"/>
		<feat xlink:href="#sSpan89" value="…"/>
		<feat xlink:href="#sSpan127" value="so that he might…"/>
		<feat xlink:href="#sSpan144" value="the reward for the great good things that he did."/>
		<feat xlink:href="#sSpan196" value="For when I lived a while in Pemje (Oxyrhynchus)"/>
		<feat xlink:href="#sSpan235" value="near an elder who performed charity,"/>
		<feat xlink:href="#sSpan268" value="a widow came to him"/>
		<feat xlink:href="#sSpan294" value="asking him for a little grain."/>
		<feat xlink:href="#sSpan330" value="He said to her,"/>
		<feat xlink:href="#sSpan347" value="“Go and bring a measure and I will measure it for you.”"/>
		<feat xlink:href="#sSpan382" value="So she brought it"/>
		<feat xlink:href="#sSpan407" value="and he assessed (it)"/>
		<feat xlink:href="#sSpan422" value="saying to her,"/>
		<feat xlink:href="#sSpan441" value="“The measure is large,”"/>
		<feat xlink:href="#sSpan462" value="pushing it out of her hand."/>
		<feat xlink:href="#sSpan486" value="He made the widow ashamed."/>
		<feat xlink:href="#sSpan512" value="But after the widow left,"/>
		<feat xlink:href="#sSpan535" value="I said to him,"/>
		<feat xlink:href="#sSpan553" value="“My father and elder,"/>
		<feat xlink:href="#sSpan570" value="Did you give grain to the widow?”"/>
		<feat xlink:href="#sSpan596" value="But he said, “No.”"/>
		<feat xlink:href="#sSpan626" value="I said to him,"/>
		<feat xlink:href="#sSpan642" value="“If you were giving it to her in charity,"/>
		<feat xlink:href="#sSpan682" value="why did you assess the measure"/>
		<feat xlink:href="#sSpan709" value="and make the widow ashamed?”"/></featList></paula>