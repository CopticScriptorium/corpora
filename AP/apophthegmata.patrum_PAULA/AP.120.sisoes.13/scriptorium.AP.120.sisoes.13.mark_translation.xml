<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.120.sisoes.13.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.120.sisoes.13.mark.xml">
		<feat xlink:href="#sSpan7" value="A brother asked Apa Sisoes,"/>
		<feat xlink:href="#sSpan35" value="'I see myself,"/>
		<feat xlink:href="#sSpan61" value="and my thoughts remain on God.'"/>
		<feat xlink:href="#sSpan83" value="The monk said to him,"/>
		<feat xlink:href="#sSpan101" value="'It is not a great thing to make your thoughts remain on God."/>
		<feat xlink:href="#sSpan157" value="But it is a great thing to see yourself"/>
		<feat xlink:href="#sSpan205" value="as below every living thing."/>
		<feat xlink:href="#sSpan239" value="For this leads to being someone who suffers in body"/>
		<feat xlink:href="#sSpan297" value="These are the acts of humility.'"/></featList></paula>