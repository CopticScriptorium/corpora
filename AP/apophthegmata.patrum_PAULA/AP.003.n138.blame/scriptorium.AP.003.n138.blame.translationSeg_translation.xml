<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.003.n138.blame.translationSeg.xml">
<feat xlink:href="#translation_1" value="A brother asked an old man,"/><!-- ⲁ...ϩ̇ⲗⲗⲟ -->
<feat xlink:href="#translation_7" value="&quot;My father, why is my heart hard and without fear of God?&quot;"/><!-- ϫⲉ...· -->
<feat xlink:href="#translation_29" value="The old man said to him, "/><!-- ⲡⲉϫⲉ...ϥ̇ -->
<feat xlink:href="#translation_35" value="&quot;I think that if a man holds blame in his heart,"/><!-- ϫⲉ...ϩⲏⲧ -->
<feat xlink:href="#translation_49" value="he will acquire for himself fear of God.&quot;"/><!-- ϥ...ⲻ -->
<feat xlink:href="#translation_61" value="The brother said to him, "/><!-- ⲡ...ϥ̇ -->
<feat xlink:href="#translation_67" value="&quot;What is blame?&quot;"/><!-- ϫⲉ...· -->
<feat xlink:href="#translation_73" value="The old man said,"/><!-- ⲡⲉϫⲉ...ⲗⲟ -->
<feat xlink:href="#translation_77" value="&quot;Let a man upbraid his soul in everything, saying to it,"/><!-- ϫⲉⲕⲁⲥ...· -->
<feat xlink:href="#translation_97" value="&apos;Remember that it is necessary for us to encounter God.&apos;&quot;"/><!-- ϫⲉ...· -->
<feat xlink:href="#translation_115" value="And he said again,"/><!-- ⲛ̇...ⲟ̇ⲛ -->
<feat xlink:href="#translation_120" value="&quot;What do I have to do with this man?&quot;"/><!-- ϫⲉ...· -->
<feat xlink:href="#translation_127" value="&quot;If one perseveres in these things, a brother has fear of God.&quot;"/><!-- ⲉⲣϣⲁⲛ...ⲻ -->
</featList>
