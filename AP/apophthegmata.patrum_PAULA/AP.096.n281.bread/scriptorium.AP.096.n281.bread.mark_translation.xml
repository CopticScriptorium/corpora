<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.096.n281.bread.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.096.n281.bread.mark.xml">
		<feat xlink:href="#sSpan8" value="An elder lived in a monastery with a brother."/>
		<feat xlink:href="#sSpan56" value="The elder gave bread to everyone who came."/>
		<feat xlink:href="#sSpan105" value="When the brother saw what was happening,"/>
		<feat xlink:href="#sSpan138" value="he said to the elder,"/>
		<feat xlink:href="#sSpan154" value="“Give me my portion of the bread,"/>
		<feat xlink:href="#sSpan190" value="and however you want to act with your portion,"/>
		<feat xlink:href="#sSpan230" value="do it.”"/>
		<feat xlink:href="#sSpan243" value="The elder divided the bread between himself and the brother,"/>
		<feat xlink:href="#sSpan291" value="and he continued doing charity with his portion."/>
		<feat xlink:href="#sSpan344" value="And many were running to the elder"/>
		<feat xlink:href="#sSpan380" value="because they heard that he gave to everyone."/>
		<feat xlink:href="#sSpan418" value="And God saw his zeal of heart"/>
		<feat xlink:href="#sSpan460" value="and blessed his bread."/>
		<feat xlink:href="#sSpan484" value="But the brother ate his bread."/>
		<feat xlink:href="#sSpan522" value="And he said to the elder,"/>
		<feat xlink:href="#sSpan544" value="“Since I have a little more bread,"/>
		<feat xlink:href="#sSpan583" value="take [it] for yourself also,"/>
		<feat xlink:href="#sSpan597" value="and let us share in common.”"/>
		<feat xlink:href="#sSpan612" value="The elder said to him,"/>
		<feat xlink:href="#sSpan636" value="“However you wish,"/>
		<feat xlink:href="#sSpan661" value="I will do it.”"/>
		<feat xlink:href="#sSpan678" value="And again they combined their life with each other."/>
		<feat xlink:href="#sSpan717" value="When the time occurred,"/>
		<feat xlink:href="#sSpan740" value="those who had need of receiving charity came."/>
		<feat xlink:href="#sSpan778" value="It happened one day [that]"/>
		<feat xlink:href="#sSpan803" value="the brother came in"/>
		<feat xlink:href="#sSpan827" value="and he saw that the bread had diminished."/>
		<feat xlink:href="#sSpan857" value="A poor brother came."/>
		<feat xlink:href="#sSpan892" value="The elder said,"/>
		<feat xlink:href="#sSpan905" value="“Give him some bread.”"/>
		<feat xlink:href="#sSpan931" value="But he said,"/>
		<feat xlink:href="#sSpan950" value="“There isn't any, Father.”"/>
		<feat xlink:href="#sSpan976" value="The elder said to him,"/>
		<feat xlink:href="#sSpan1000" value="“Go in and look.”"/>
		<feat xlink:href="#sSpan1025" value="The brother went in"/>
		<feat xlink:href="#sSpan1060" value="and he found a bread storeroom filled with it."/>
		<feat xlink:href="#sSpan1113" value="When he saw this,"/>
		<feat xlink:href="#sSpan1137" value="he was afraid."/>
		<feat xlink:href="#sSpan1154" value="And he gave [it] to the poor brother."/>
		<feat xlink:href="#sSpan1191" value="And he perceived the faith and virtue of the elder."/>
		<feat xlink:href="#sSpan1240" value="And he glorified God."/></featList></paula>