<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.096.n281.bread.translationSeg.xml">
<feat xlink:href="#translation_1" value="An elder lived in a monastery with a brother."/><!-- ⲛ...⳾ -->
<feat xlink:href="#translation_14" value="The elder gave bread to everyone who came."/><!-- ⲡ̇...⳾ -->
<feat xlink:href="#translation_27" value="When the brother saw what was happening,"/><!-- ⲛ̇ⲧⲉⲣⲉ...ϣⲟⲟⲡ -->
<feat xlink:href="#translation_37" value="he said to the elder,"/><!-- ⲡⲉϫⲁ...ϩⲗⲗⲟ -->
<feat xlink:href="#translation_42" value="“Give me my portion of the bread,"/><!-- ϫⲉ...⳾ -->
<feat xlink:href="#translation_53" value="and however you want to act with your portion,"/><!-- ⲁⲩⲱ̇...ⲟⲩⲱⲛ -->
<feat xlink:href="#translation_67" value="do it.”"/><!-- ⲁ̇ⲣⲓ...·ⲻ -->
<feat xlink:href="#translation_70" value="The elder divided the bread between himself and the brother,"/><!-- ⲡ...ⲥ̇ⲟⲛ -->
<feat xlink:href="#translation_84" value="and he continued doing charity with his portion."/><!-- ⲁ̇ⲩⲱ̇...⳾ -->
<feat xlink:href="#translation_101" value="And many were running to the elder"/><!-- ⲛⲉ...ϩⲗⲗⲟ -->
<feat xlink:href="#translation_114" value="because they heard that he gave to everyone."/><!-- ⲉ̇...⳾ -->
<feat xlink:href="#translation_125" value="And God saw his zeal of heart"/><!-- ⲁ̇...̇ϩⲏⲧ -->
<feat xlink:href="#translation_138" value="and blessed his bread."/><!-- ⲁ̇...⳾ -->
<feat xlink:href="#translation_146" value="But the brother ate his bread."/><!-- ⲡ...⳾ -->
<feat xlink:href="#translation_157" value="And he said to the elder,"/><!-- ⲁ[ⲩⲱ]...ϩ̇ⲗⲗⲟ -->
<feat xlink:href="#translation_163" value="“Since I have a little more bread,"/><!-- ϫ[ⲉ...⳾ -->
<feat xlink:href="#translation_175" value="take [it] for yourself also,"/><!-- ϫⲓ̣ⲧ̣...ⲟⲛ -->
<feat xlink:href="#translation_179" value="and let us share in common.”"/><!-- ⲛ...ⲕⲟⲓ̇ⲛⲱⲛⲓⲁ -->
<feat xlink:href="#translation_183" value="The elder said to him,"/><!-- ⲡ...ϩⲗⲗⲟ -->
<feat xlink:href="#translation_191" value="“However you wish,"/><!-- ϫⲉ̇...ⲥ -->
<feat xlink:href="#translation_200" value="I will do it.”"/><!-- ϯ...⳾ -->
<feat xlink:href="#translation_205" value="And again they combined their life with each other."/><!-- ⲁⲩⲱ...·ⲻ -->
<feat xlink:href="#translation_216" value="When the time occurred,"/><!-- ⲛ...ϣⲱⲡⲉ -->
<feat xlink:href="#translation_222" value="those who had need of receiving charity came."/><!-- ⲁ...·ⲻ -->
<feat xlink:href="#translation_234" value="It happened one day [that]"/><!-- ⲁ...ϩⲟⲟⲩ -->
<feat xlink:href="#translation_241" value="the brother came in"/><!-- ⲁ...ⲥⲟⲛ -->
<feat xlink:href="#translation_248" value="and he saw that the bread had diminished."/><!-- ⲁ̇...ⲥⲃⲟⲕ -->
<feat xlink:href="#translation_258" value="A poor brother came."/><!-- ⲁ...· -->
<feat xlink:href="#translation_269" value="The elder said,"/><!-- ⲡⲉϫⲉ...ϩⲗⲗⲟ -->
<feat xlink:href="#translation_272" value="“Give him some bread.”"/><!-- ϫⲉ...⳾ -->
<feat xlink:href="#translation_280" value="But he said,"/><!-- ⲛⲧⲟϥ...ϥ -->
<feat xlink:href="#translation_284" value="“There isn&apos;t any, Father.”"/><!-- ϫⲉ...·ⲻ -->
<feat xlink:href="#translation_290" value="The elder said to him,"/><!-- ⲡⲉϫⲉ...ϥ -->
<feat xlink:href="#translation_295" value="“Go in and look.”"/><!-- ϫ[ⲉ]...·ⲻ -->
<feat xlink:href="#translation_300" value="The brother went in"/><!-- ⲡ...ⲉϩⲟⲩⲛ -->
<feat xlink:href="#translation_307" value="and he found a bread storeroom filled with it."/><!-- ⲁ̇...ϥ -->
<feat xlink:href="#translation_322" value="When he saw this,"/><!-- ⲛ...ⲡⲁⲓ -->
<feat xlink:href="#translation_329" value="he was afraid."/><!-- ⲁ̇...⳾ -->
<feat xlink:href="#translation_334" value="And he gave [it] to the poor brother."/><!-- ⲁ̇...ⲻ -->
<feat xlink:href="#translation_344" value="And he perceived the faith and virtue of the elder."/><!-- ⲁ...⳾ -->
<feat xlink:href="#translation_360" value="And he glorified God."/><!-- ⲁ̇...⳾ⲻ -->
</featList>
