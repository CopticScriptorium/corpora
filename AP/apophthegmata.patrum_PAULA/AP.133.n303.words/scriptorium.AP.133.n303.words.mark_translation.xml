<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.133.n303.words.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.133.n303.words.mark.xml">
		<feat xlink:href="#sSpan5" value="A brother asked a monk,"/>
		<feat xlink:href="#sSpan29" value="'If a brother brings me some words from outside,"/>
		<feat xlink:href="#sSpan68" value="do you, father, want me to say to him, "/>
		<feat xlink:href="#sSpan97" value="'Do not bring them in to me?''"/>
		<feat xlink:href="#sSpan121" value="The monk said to him, 'Do not.'"/>
		<feat xlink:href="#sSpan150" value="The brother said to him, 'Why?'"/>
		<feat xlink:href="#sSpan180" value="The monk said to him,"/>
		<feat xlink:href="#sSpan194" value="'Because we ourselves have not been able to observe this, "/>
		<feat xlink:href="#sSpan248" value="lest, while we say to our companion, "/>
		<feat xlink:href="#sSpan281" value="'Don't do this,'"/>
		<feat xlink:href="#sSpan297" value="we find ourselves later doing this.'"/>
		<feat xlink:href="#sSpan341" value="The brother said to him,"/>
		<feat xlink:href="#sSpan359" value="'What else is it necessary to do?'"/>
		<feat xlink:href="#sSpan388" value="The monk said, "/>
		<feat xlink:href="#sSpan402" value="'What we desire is silence,"/>
		<feat xlink:href="#sSpan425" value="its example is enough for our companion.'"/></featList></paula>