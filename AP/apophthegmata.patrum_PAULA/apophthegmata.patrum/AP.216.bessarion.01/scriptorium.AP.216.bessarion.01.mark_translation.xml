<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.216.bessarion.01.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.216.bessarion.01.mark.xml">
		<feat xlink:href="#sSpan8" value="He said, that is Abba Doulos, the disciple of Abba Besarion:"/>
		<feat xlink:href="#sSpan85" value="“while we were walking beside the sea,"/>
		<feat xlink:href="#sSpan120" value="and I became thirsty."/>
		<feat xlink:href="#sSpan148" value="I said to Abba Besarion: "/>
		<feat xlink:href="#sSpan187" value="“My father, I am very thirsty.”"/>
		<feat xlink:href="#sSpan225" value="But the old man prayed"/>
		<feat xlink:href="#sSpan258" value="he said to me:"/>
		<feat xlink:href="#sSpan280" value="“Drink at the sea and the water is sweet.”"/>
		<feat xlink:href="#sSpan351" value="And I drank."/>
		<feat xlink:href="#sSpan387" value="And I put a little water into my vessel which was in my hand, saying:"/>
		<feat xlink:href="#sSpan494" value="“Lest I get thirsty again.”"/>
		<feat xlink:href="#sSpan529" value="But the old man after seeing (this) said to me:"/>
		<feat xlink:href="#sSpan583" value="“Why did you fill water?”"/>
		<feat xlink:href="#sSpan623" value="I said:"/>
		<feat xlink:href="#sSpan636" value="“Forgive me, lest I become thirsty there.”"/>
		<feat xlink:href="#sSpan713" value="The old man said to me:"/>
		<feat xlink:href="#sSpan741" value="“God here (of this place) is also God there.”"/></featList></paula>