<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.133.n303.words.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.133.n303.words.mark.xml">
		<feat xlink:href="#sSpan7" value="A brother asked a monk,"/>
		<feat xlink:href="#sSpan41" value="'If a brother brings me some words from outside,"/>
		<feat xlink:href="#sSpan104" value="do you, father, want me to say to him, "/>
		<feat xlink:href="#sSpan151" value="'Do not bring them in to me?''"/>
		<feat xlink:href="#sSpan189" value="The monk said to him, 'Do not.'"/>
		<feat xlink:href="#sSpan232" value="The brother said to him, 'Why?'"/>
		<feat xlink:href="#sSpan277" value="The monk said to him,"/>
		<feat xlink:href="#sSpan295" value="'Because we ourselves have not been able to observe this, "/>
		<feat xlink:href="#sSpan378" value="lest, while we say to our companion, "/>
		<feat xlink:href="#sSpan433" value="'Don't do this,'"/>
		<feat xlink:href="#sSpan459" value="we find ourselves later doing this.'"/>
		<feat xlink:href="#sSpan531" value="The brother said to him,"/>
		<feat xlink:href="#sSpan557" value="'What else is it necessary to do?'"/>
		<feat xlink:href="#sSpan602" value="The monk said, "/>
		<feat xlink:href="#sSpan620" value="'Since we desire silence,"/>
		<feat xlink:href="#sSpan658" value="its example is enough for our companion.'"/></featList></paula>