<paula version="1.1">
	<header paula_id="scriptorium.AP.127.n298.demon.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.127.n298.demon.mark.xml">
		<feat xlink:href="#sSpan10" value="A man became a demon,"/>
		<feat xlink:href="#sSpan56" value="and was greatly afflicted,"/>
		<feat xlink:href="#sSpan90" value="and was spitting out foam."/>
		<feat xlink:href="#sSpan122" value="He struck a monk among the elders upon his cheek."/>
		<feat xlink:href="#sSpan200" value="But the monk quickly turned the other one to him."/>
		<feat xlink:href="#sSpan284" value="And the demon could not bear the fire of his humility."/>
		<feat xlink:href="#sSpan347" value="He went out of him."/></featList></paula>