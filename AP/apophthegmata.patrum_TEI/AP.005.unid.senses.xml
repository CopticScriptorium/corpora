<phr>
<w lemma="ⲛⲁ" type="PREP">
ⲛⲁ
</w>
<w lemma="ϥ" type="PPERO">
ϥ
</w>
</phr>
<phr>
<w lemma="ⲛϭⲓ" type="PTC">
ⲛ̇ϭⲓ
</w>
<w lemma="ⲡ" type="ART">
ⲡ
</w>
<lb n="9"/>
<w lemma="ϩⲗⲗⲟ" type="N">
ϩⲗ̇ⲗⲟ
</w>
</phr>
</s>
