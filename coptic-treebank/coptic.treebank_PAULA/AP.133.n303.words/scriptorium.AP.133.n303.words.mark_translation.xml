<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.133.n303.words.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.133.n303.words.mark.xml">
		<feat xlink:href="#sSpan5" value="A brother asked a monk,"/>
		<feat xlink:href="#sSpan31" value="'If a brother brings me some words from outside,"/>
		<feat xlink:href="#sSpan72" value="do you, father, want me to say to him,"/>
		<feat xlink:href="#sSpan102" value="'Do not bring them in to me?''"/>
		<feat xlink:href="#sSpan128" value="The monk said to him, 'Do not.'"/>
		<feat xlink:href="#sSpan158" value="The brother said to him, 'Why?'"/>
		<feat xlink:href="#sSpan187" value="The monk said to him,"/>
		<feat xlink:href="#sSpan202" value="'Because we ourselves have not been able to observe this,"/>
		<feat xlink:href="#sSpan257" value="lest, while we say to our companion,"/>
		<feat xlink:href="#sSpan291" value="'Don't do this,'"/>
		<feat xlink:href="#sSpan308" value="we find ourselves later doing this.'"/>
		<feat xlink:href="#sSpan353" value="The brother said to him,"/>
		<feat xlink:href="#sSpan372" value="'What else is it necessary to do?'"/>
		<feat xlink:href="#sSpan401" value="The monk said,"/>
		<feat xlink:href="#sSpan416" value="'What we desire is silence,"/>
		<feat xlink:href="#sSpan441" value="its example is enough for our companion.'"/></featList></paula>