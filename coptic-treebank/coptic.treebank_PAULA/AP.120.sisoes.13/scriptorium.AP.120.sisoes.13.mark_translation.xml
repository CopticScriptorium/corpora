<?xml version='1.0' encoding='UTF-8'?><!DOCTYPE paula SYSTEM "paula_feat.dtd">
<paula version="1.1">
	<header paula_id="scriptorium.AP.120.sisoes.13.mark_translation"/>
	<featList xmlns:xlink="http://www.w3.org/1999/xlink" type="translation" xml:base="scriptorium.AP.120.sisoes.13.mark.xml">
		<feat xlink:href="#sSpan7" value="A brother asked Apa Sisoes,"/>
		<feat xlink:href="#sSpan37" value="'I see myself,"/>
		<feat xlink:href="#sSpan63" value="and my thoughts remain on God.'"/>
		<feat xlink:href="#sSpan87" value="The monk said to him,"/>
		<feat xlink:href="#sSpan106" value="'It is not a great thing to make your thoughts remain on God."/>
		<feat xlink:href="#sSpan166" value="But it is a great thing to see yourself"/>
		<feat xlink:href="#sSpan214" value="as below every living thing."/>
		<feat xlink:href="#sSpan253" value="For this leads to being someone who suffers in body"/>
		<feat xlink:href="#sSpan314" value="These are the acts of humility.'"/></featList></paula>